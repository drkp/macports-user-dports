    {1 pdfcslatex pdftex - {-etex cslatex.ini}} \
    {1 csplain pdftex - {-etex -enc csplain-utf8.ini}} \
    {1 pdfcsplain pdftex - {-etex -enc csplain-utf8.ini}} \
